<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Strona główna</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <link href="/css/cards.css" rel="stylesheet" type="text/css">
    <link rel="icon" href="/images/to-do.png" type="image/x-icon">
</head>
<body>
    <div class="container">
        <div class="menu">
            <div class="user-box">
                <img src="/images/user-alt-solid.svg" alt="icon" />
                <h5> Witaj, <%= user %>! </h5>
            </div>
            <div class="link">
                <a href="/addCard"> Dodaj nowe zadanie </a>
            </div>
            <div class="link">
                Link 2
            </div>
            <div class="link">
                Link 3
            </div>
            <div class="link">
                Link 4
            </div>
            <div class="link">
                <a href="/logout"> Wyloguj </a>
            </div>
        </div>
        <div class="tasks">

            <div class="todo">
                <% cards.forEach(card => { %>
                    <% if (card.column === 'todo') {%> 
                    <div class="card">
                        <p class="text"> <%= card.text %></p>
                        <h5> Termin: <%= card.date.toLocaleDateString() %> </h5>
                    </div>
                    <% }}); %> 
            </div>

            <div class="inprogress">
                <% cards.forEach(card => { %>
                    <% if (card.column === 'inprogress') {%> 
                    <div class="card">
                        <p class="text"> <%= card.text %></p>
                        <h5> Termin: <%= card.date.toLocaleDateString() %> </h5>
                    </div>
                    <% }}); %> 
            </div>

            <div class="done">
                <% cards.forEach(card => { %>
                    <% if (card.column === 'done') {%> 
                    <div class="card">
                        <p class="text"> <%= card.text %></p>
                        <h5> Termin: <%= card.date.toLocaleDateString() %> </h5>
                    </div>
                    <% }}); %> 
            </div>


        </div>
    </div>
</body>
</html>